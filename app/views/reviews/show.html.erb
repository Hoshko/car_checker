
<div class="page-header">
  <h1><%=t '.title', :default => "Огляд" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Ідентифікатор автомобіля :</strong></dt>
  <dd><%= @review.car_model_id %></dd>
  <dt><strong>Ціна продавця:</strong></dt>
  <dd><%= @review.requested_price %></dd>
  <dt><strong>Ціна від спеціаліста:</strong></dt>
  <dd><%= @review.suggested_price %></dd>
  <dt><strong>Коментар:</strong></dt>
  <dd><%= @review.comment %></dd>
  <dt><strong>Ім'я власника:</strong></dt>
  <dd><%= @review.owner_name %></dd>
  <dt><strong>Номер телефону власника:</strong></dt>
  <dd><%= @review.owner_phone %></dd>
  
  <% @review.answers.each do |answer| %>
    <dt><strong><%= answer.question.content %>:</strong></dt>
    <dd><%= answer.answer ? 'Так' : 'Ні' %></dd>
  <% end %>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              reviews_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_review_path(@review), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              review_path(@review),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
