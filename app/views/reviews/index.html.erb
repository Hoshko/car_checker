<div class="page-header">
  <h1><%=t '.title', :default => "Огляди авто" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Ідентифікатор</th>
      <th>Модель автомобіля</th>
      <th>Ціна продавця</th>
      <th>Ім'я власника</th>
      <th>Номер телефону власника</th>
      <th>Додано</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @reviews.each do |review| %>
      <tr class="<%= review_style(review) %>" >
        <td><%= link_to review.id, review_path(review) %></td>
        <td><%= review.car_model.full_name %></td>
        <td><%= review.requested_price %></td>
        <td><%= review.owner_name %></td>
        <td><%= review.owner_phone %></td>
        <td><%=l review.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      review_path(review), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_review_path(review), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      review_path(review),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_review_path,
            :class => 'btn btn-primary' %>
