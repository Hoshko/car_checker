<div class="page-header">
  <h1><%=t '.title', :default => "Модель Авто" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Назва:</strong></dt>
  <dd><%= @car_model.name %></dd>
  <dt><strong>Виробник:</strong></dt>
  <dd><%= @car_model.manufacturer %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              car_models_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_car_model_path(@car_model), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              car_model_path(@car_model),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
