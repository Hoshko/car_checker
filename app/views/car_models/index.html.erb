<div class="page-header">
  <h1><%=t '.title', :default => 'Mоделі авто' %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th> Ідентифікатор </th>
      <th> Назва </th>
      <th> Виробник </th>
      <th> Додано </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @car_models.each do |car_model| %>
      <tr>
        <td><%= link_to car_model.id, car_model_path(car_model) %></td>
        <td><%= car_model.name %></td>
        <td><%= car_model.manufacturer %></td>
        <td><%=l car_model.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      car_model_path(car_model), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_car_model_path(car_model), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      car_model_path(car_model),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_car_model_path,
            :class => 'btn btn-primary' %>
