<%= form_for @car_model, :html => { :class => "form-horizontal car_model" } do |f| %>

  <% if @car_model.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@car_model.errors.count, "error") %> prohibited this car_model from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @car_model.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Назва моделі", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label "Виробник", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :manufacturer, :class => 'form-control' %>
    </div>
    <%=f.error_span(:manufacturer) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                car_models_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
