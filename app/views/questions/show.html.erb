<div class="page-header">
  <h1><%=t '.title', :default => "Запитання" %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Питання:</strong></dt>
  <dd><%= @question.content %></dd>
  <dt><strong>Модель Авто:</strong></dt>
  <dd><%= @question.car_model_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
